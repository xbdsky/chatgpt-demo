<style>
.ad-container {
  position: relative;
  width: 100%;
}
  
.ad {
  position: fixed;
  width: auto;
}

.ad-left {
  left: 0;
  top: 50%;
  margin-top: -300px;
  width: 30vh;
}

.ad-right {
  right: 0;
  top: 50%;
  margin-top: -300px;
  width: 30vh;
}

.hidden {
  display: none;
}
</style>
<script is:inline>
var ua = navigator.userAgent;
var ipad = ua.match(/(iPad).*OS\s([\d_]+)/),
isIphone =!ipad && ua.match(/(iPhone\sOS)\s([\d_]+)/),
isAndroid = ua.match(/(Android)\s+([\d.]+)/),
isMobile = isIphone || ipad || isAndroid;
var adBox = document.getElementsByClassName('ad-container');  

//判断
if(isMobile){
  adBox.className='hidden';
}
</script>
